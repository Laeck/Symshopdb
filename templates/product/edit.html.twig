{% extends 'base.html.twig' %}

{% block title %}
    Eddition de {{ product.name }}
{% endblock %}

{% block body %}
    <h1>Editer le produit {{ product.name }}</h1>

        {{ form_start(formView) }}

    {{ form_errors(formView) }}

    <div class="row">
        <div class="col">
            {{ form_row(formView.name) }}
            {{ form_row(formView.price) }}
        </div>

        <div class="col">
            {{ form_row(formView.mainPicture) }}
            {{ form_row(formView.category) }}
            {{ form_row(formView.shortDescription) }}        
        </div>
    </div>

    {# Pour plus de personnalisation et Ã©quivalent a {{ form_row(formView.name) }}
    {{ form_label(formView.name) }}
    {{ form_errors(formView.name) }}
    {{ form_widget(formView.name) }}
    {{ form_help(formView.name) }}  #}

    <button class="btn btn-primary">
        <i class="fas fa-save"></i>
        Editer le produit                                        
    </button>

    {{ form_end(formView) }}
{% endblock %}