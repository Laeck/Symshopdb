{% extends 'base.html.twig' %}

{% block title %}
    Modification d'une categorie
{% endblock %}

{% block body %}
    <h1>Modifier la catégorie : "{{ category.name }}"</h1>

	{{ form_start(formView) }}

	{{ form_widget(formView) }}

    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i>
        Modifier une catégorie
    </button>

	{{ form_end(formView) }}
{% endblock %}